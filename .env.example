# ==================== 全域数据平台配置示例 ====================
# 复制此文件为 .env 并修改配置

# ==================== System 模块配置 ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==================== 数据库配置 ====================
POSTGRES_USER=addp
POSTGRES_PASSWORD=addp_password
POSTGRES_DB=addp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================== Redis 配置 ====================
REDIS_PASSWORD=addp_redis
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== MinIO 配置 ====================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=addp-data

# ==================== 服务端口配置 ====================
# Gateway
GATEWAY_PORT=8000

# System
SYSTEM_BACKEND_PORT=8080
SYSTEM_FRONTEND_PORT=8090

# Manager
MANAGER_BACKEND_PORT=8081
MANAGER_FRONTEND_PORT=8091

# Meta
META_BACKEND_PORT=8082
META_FRONTEND_PORT=8092

# Transfer
TRANSFER_BACKEND_PORT=8083
TRANSFER_FRONTEND_PORT=8093

# ==================== 服务间调用配置 ====================
ENABLE_SERVICE_INTEGRATION=true
SERVICE_CALL_TIMEOUT=30s

# ==================== Manager 模块配置 ====================
STORAGE_TYPE=minio
PREVIEW_MAX_ROWS=1000
PREVIEW_MAX_SIZE_MB=100

# ==================== Meta 模块配置 ====================
PARSER_SAMPLE_SIZE=10000
PARSER_TIMEOUT=300s

# ==================== Transfer 模块配置 ====================
WORKER_CONCURRENCY=10
TRANSFER_BATCH_SIZE=1000
TRANSFER_TIMEOUT=3600s
TRANSFER_MAX_RETRY=3

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== 环境 ====================
ENV=development